
<% @items.each do |item| %>
    <div class="card">

        <img class="card-img" src="<%= item.image %>">

        <div class="card-content">

                <span class="card-title"><%= link_to item.name, item_path(item) %></span>
                <p>Price: $<%= item.price %></p>
                <p>Rating: <%= item.rating %></p>
                <p><a href="<%= item.link %>">Link</a></p>
                
        </div>

    </div>
<% end %>
  